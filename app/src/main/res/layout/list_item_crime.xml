<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_crime">
    <CheckBox
        android:id="@+id/list_item_crime_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/list_item_crime_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_crime_solved_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Crime Title"/>
    <TextView
        android:id="@+id/list_item_crime_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_crime_solved_check_box"
        android:layout_below="@id/list_item_crime_title_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Crime Date"/>
    <Button
        android:id="@+id/list_item_crime_button_move_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Up"
        android:layout_below="@id/list_item_crime_title_text_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/list_item_crime_date_text_view"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_crime_imageView"
        android:layout_alignParentLeft="true"
        tools:text="IMAGE"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_item_crime_button_move_up"
        android:layout_alignLeft="@+id/list_item_crime_date_text_view"
        android:minHeight="12dp"
        android:background="#b91414"/>

</RelativeLayout>